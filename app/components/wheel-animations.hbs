<section class='animation__container'>
  {{#if @users}}
    <div>
      {{#each @users as |m|}}
        <a
          href='https://members.realdevsquad.com/{{m.username}}'
          referrerpolicy='same-origin'
          target='_blank'
          class='member__link'
        >
          <img
            style='--x: {{(this.randomNumber)}}; --y:{{(this.randomNumber
            )}}; --size:{{(this.randomSize)}};'
            class='circle member__img'
            src='{{(this.resizeImageUrl m.picture.publicId 150 150)}}'
            alt='{{m.first_name}} {{m.last_name}}'
          />
        </a>
      {{/each}}
    </div>
  {{else}}
    <div class='circle shine'></div>
  {{/if}}
</section>